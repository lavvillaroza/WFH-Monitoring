{
  "compilerOptions": {
    "target": "ES6", 
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "CommonJS", 
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "outDir": "./dist",    
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "electron/**/*",
    "next-env.d.ts",
    ".next/types/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
